# 除外するファイル拡張子
excluded_file_extensions:
  - ".pdf"
  - ".doc"
  - ".docx"
  - ".xls"
  - ".xlsx"
  - ".ppt"
  - ".pptx"
  - ".zip"
  - ".rar"
  - ".jpg"
  - ".jpeg"
  - ".png"
  - ".gif"
  - ".mp4"
  - ".mov"
  - ".avi"

# 除外するクエリパラメータを含むURL（動的コンテンツの可能性）
excluded_query_patterns:
  - "utm_"  # UTMパラメータ
  - "?p="   # ページネーション
  - "?page="
  - "?id="
  - "?search=" 